<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txt_item_boxoffice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/txt_item_boxoffice_wk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:gravity="right"
        android:layout_toEndOf="@+id/txt_item_boxoffice_name"/>
    <TextView
        android:id="@+id/txt_item_boxoffice_wboxoffice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_below="@+id/txt_item_boxoffice_name"/>
    <TextView
        android:id="@+id/txt_item_boxoffice_tboxoffice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="end"
        android:layout_margin="10dp"
        android:layout_below="@+id/txt_item_boxoffice_name"
        android:layout_toEndOf="@+id/txt_item_boxoffice_wboxoffice"/>
</RelativeLayout>