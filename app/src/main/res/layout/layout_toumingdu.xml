<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <Button 
        android:id="@+id/btn_tmd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"/>
    <Button 
        android:id="@+id/btn_tmd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"/>
    <Button 
        android:id="@+id/btn_tmd3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"/>
	<EditText 
	    android:id="@+id/et_tmd"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="请输入透明度"
	    android:inputType="number"/>
	<Button 
	    android:id="@+id/btn_change_buttontmd"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="改变按钮透明度"/>
	<Button 
	    android:id="@+id/btn_change_activitytmd"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="设置透明度"/>
	<Button 
	    android:id="@+id/btn_alpha1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="动画--从无到有"/>
	<Button 
	    android:id="@+id/btn_alpha2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="动画--从有到无"/>
	<Button 
	    android:id="@+id/btn_animation1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:text="旋转动画"/>
	<Button 
	    android:id="@+id/btn_animation2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:text="缩放动画"/>
	<Button 
	    android:id="@+id/btn_animation3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:text="平移动画"/>
</LinearLayout>
