<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--actionbar-->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="vertical" />
    <com.just.test.custom.RadialButtonLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>
    <com.github.alexkolpa.fabtoolbar.FabToolbar
        android:id="@+id/view_fabtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        app:tb_button_gravity="end"
        app:tb_container_gravity="start"
        app:tb_color="@color/green"
        app:tb_anim_duration="500">
        <ImageView
            android:id="@+id/iv_fabTool_delete"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_delete"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
        <ImageView
            android:id="@+id/iv_fabTool_refresh"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_refresh"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
        <ImageView
            android:id="@+id/iv_fabTool_remove"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_remove"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
        <ImageView
            android:id="@+id/iv_fabTool_create"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_create"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
        <ImageView
            android:id="@+id/iv_fabTool_search"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_search"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
    </com.github.alexkolpa.fabtoolbar.FabToolbar>
</RelativeLayout>