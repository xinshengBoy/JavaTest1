<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_item_searchMusic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_item_search_musicName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/txt_item_search_airtistName"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#ff767976"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/txt_item_search_musicName"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/txt_item_search_albumName"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#ff767976"
            android:textSize="16sp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/txt_item_search_musicName"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"/>
    </RelativeLayout>
</LinearLayout>