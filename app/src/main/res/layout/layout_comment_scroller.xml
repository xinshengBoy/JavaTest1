<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--actionbar-->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="vertical" />
    <com.just.test.custom.AdvTextSwitcher
        android:id="@+id/txt_advText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:advTextColor="@color/red"
        app:advTextSize="20sp"
        app:advGravity="center"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right"
        android:layout_margin="5dp"/>
    <com.just.test.custom.AdvTextSwitcher
        android:id="@+id/txt_advText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:advTextColor="@color/blue"
        app:advTextSize="20sp"
        app:advGravity="center"
        android:inAnimation="@anim/fade_in_slide_in"
        android:outAnimation="@anim/fade_out_slide_out"
        android:layout_margin="5dp"/>
    <com.just.test.custom.AdvTextSwitcher
        android:id="@+id/txt_advText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:advTextColor="@color/green"
        app:advTextSize="20sp"
        app:advGravity="center"
        android:inAnimation="@anim/fade_in_slide_in"
        android:outAnimation="@anim/fade_out_slide_out"
        android:layout_margin="5dp"/>

</LinearLayout>