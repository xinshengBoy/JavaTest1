<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_item_airquality_cityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:id="@+id/txt_item_airquality_aqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_item_airquality_cityName"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/txt_item_airquality_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_item_airquality_cityName"
        android:layout_toEndOf="@+id/txt_item_airquality_aqi"
        android:gravity="right"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:id="@+id/txt_item_airquality_core"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_item_airquality_aqi"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/txt_item_airquality_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_item_airquality_aqi"
        android:layout_toEndOf="@+id/txt_item_airquality_core"
        android:gravity="right"
        android:layout_marginEnd="15dp"/>
</RelativeLayout>