<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <!--actionbar-->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="vertical" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/txt_seekbar_min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_seekbar_max"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>
    <com.just.test.custom.MaterialRangeSlider
        android:id="@+id/view_twoWaySeekBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:outsideRangeLineStrokeWidth="5dp"
        app:insideRangeLineStrokeWidth="10dp"
        app:outsideRangeLineColor="@color/green"
        app:insideRangeLineColor="@color/red"
        app:pressedTargetRadius="15dp"
        app:unpressedTargetRadius="5dp"
        app:targetColor="@color/black"/>
</LinearLayout>