<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--actionbar-->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="vertical" />
    <TextView
        android:id="@+id/txt_bubblesort_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/et_bubblesort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:inputType="number"
            android:hint="请输入关键字"
            android:background="@drawable/bg_filmdetail_edit"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/txt_bubblesort_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_filmdetail_edit"
            android:gravity="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_bubblesort_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="排序"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@drawable/bg_filmdetail_edit"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/txt_bubblesort_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结果"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:layout_margin="5dp"/>
</LinearLayout>