<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.github.siyamed.shapeimageview.BubbleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/beautifalgirl"
            app:siArrowPosition="right"
            app:siSquare="true"
            android:layout_gravity="center_horizontal"/>
        <com.github.siyamed.shapeimageview.RoundedImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/beautifalgirl"
            app:siRadius="6dp"
            app:siBorderWidth="6dp"
            app:siBorderColor="@android:color/holo_green_dark"
            app:siSquare="true"
            android:layout_gravity="center_horizontal"/>
        <com.github.siyamed.shapeimageview.CircularImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/beautifalgirl"
            app:siBorderWidth="6dp"
            app:siBorderColor="@android:color/holo_orange_light"
            android:layout_gravity="center_horizontal"/>
        <com.github.siyamed.shapeimageview.DiamondImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/beautifalgirl"
            app:siBorderWidth="6dp"
            app:siBorderColor="@android:color/holo_blue_bright"
            android:layout_gravity="center_horizontal"/>
        <com.github.siyamed.shapeimageview.PentagonImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/beautifalgirl"
            app:siBorderWidth="6dp"
            app:siBorderColor="@android:color/background_dark"
            android:layout_gravity="center_horizontal"/>
        <com.github.siyamed.shapeimageview.HexagonImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/beautifalgirl"
            app:siBorderWidth="6dp"
            app:siBorderColor="@android:color/holo_purple"
            android:layout_gravity="center_horizontal"/>
        <com.github.siyamed.shapeimageview.OctogonImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/beautifalgirl"
            app:siBorderWidth="6dp"
            app:siBorderColor="@android:color/holo_red_dark"
            android:layout_gravity="center_horizontal"/>
        <com.github.siyamed.shapeimageview.StarImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/beautifalgirl"
            app:siBorderWidth="6dp"
            app:siBorderColor="@android:color/holo_green_light"
            android:layout_gravity="center_horizontal"/>
        <com.github.siyamed.shapeimageview.HeartImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/beautifalgirl"
            app:siBorderWidth="6dp"
            app:siBorderColor="@android:color/holo_blue_bright"
            android:layout_gravity="center_horizontal"/>
        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/beautifalgirl"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</ScrollView>