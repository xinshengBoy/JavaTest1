<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--actionbar-->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="vertical" />
    <LinearLayout
        android:id="@+id/layout_xutilsLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/headerLayout">
        <EditText
            android:id="@+id/et_xutilsdb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:hint="此时你的心情"
            android:background="@drawable/bg_filmdetail_edit"/>
        <Button
            android:id="@+id/btn_xutilsDB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="保存"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_filmdetail_edit"
            android:layout_marginStart="5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/btn_xutils_update"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:textColor="@color/green"
        android:textSize="16sp"
        android:text="刷新"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_filmdetail_edit"
        android:layout_below="@+id/layout_xutilsLayout"
        android:layout_margin="5dp"/>
    <ListView
        android:id="@+id/listview_xutilsDB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/btn_xutils_update"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txt_xutils_nocontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="暂无数据"
        android:visibility="visible"
        android:layout_centerInParent="true"/>
    <ProgressBar
        android:id="@+id/pb_xutils"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>