<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--actionbar-->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="vertical" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_longBus_position"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="站点"
            android:background="@drawable/bg_filmdetail_edit"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btn_longBus_queryPosition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_filmdetail_edit"
            android:text="查询"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_longBus_from"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="出发站"
            android:background="@drawable/bg_filmdetail_edit"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/et_longBus_to"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="到达站"
            android:background="@drawable/bg_filmdetail_edit"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btn_longBus_query"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_filmdetail_edit"
            android:text="查询"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/listview_longBus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>