<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--actionbar-->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="vertical" />
    <TextView
        android:id="@+id/txt_caculate_result2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/txt_caculate_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_caculate_kexue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="科学"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:gravity="center"
            android:layout_marginRight="1dp"/>
        <TextView
            android:id="@+id/txt_caculate_clearAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:gravity="center"
            android:layout_marginRight="1dp"/>
        <TextView
            android:id="@+id/txt_caculate_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="-"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:gravity="center"
            android:layout_marginRight="1dp"/>
        <TextView
            android:id="@+id/txt_caculate_mo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="%"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_caculate_seven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_caculate"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_caculate_eight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_caculate"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_caculate_nine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_caculate"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_caculate_chu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="÷"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:gravity="center"
            android:layout_marginTop="1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_caculate_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_caculate"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_caculate_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_caculate"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_caculate_six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_caculate"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_caculate_cheng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="×"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:gravity="center"
            android:layout_marginTop="1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_caculate_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_caculate"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_caculate_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_caculate"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_caculate_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_caculate"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_caculate_jian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:gravity="center"
            android:layout_marginTop="1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_caculate_zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_caculate"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_caculate_point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_caculate"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_caculate_dengyu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_caculate"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_caculate_jia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:gravity="center"
            android:layout_marginTop="1dp"/>
    </LinearLayout>
</LinearLayout>