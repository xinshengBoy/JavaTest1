<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleTextProgressbar">
        <attr name="in_circle_color" format="color" />
    </declare-styleable>
    <declare-styleable name="CircleProgressBar">

        <!-- 设置圆环进度条的圆环背景属性，包括颜色与宽度 -->
        <attr name="circle_color" format="color" />
        <attr name="circle_width" format="dimension" />

        <!-- 设置圆环进度条的进度条属性，包括颜色与宽度，颜色可以设置3种从而实现一个渐变的效果 -->
        <attr name="progress_color1" format="color" />
        <attr name="progress_color2" format="color" />
        <attr name="progress_color3" format="color" />
        <attr name="progress_width" format="dimension" />

        <!-- 设置圆环进度条百分比是从低到高显示还是从高到低显示 ，默认从低到高，即从0到100 -->
        <attr name="set_high_to_low" format="boolean" />

        <!-- 是否设置圆环进度条中间的内容属性，需要与下面的一组属性配合使用 -->
        <attr name="is_set_top_title" format="boolean" />
        <attr name="is_set_mid_content" format="boolean" />
        <attr name="is_set_bottom_content" format="boolean" />

        <!-- 设置圆环进度条中间的内容属性 -->
        <attr name="top_title" format="string" />
        <attr name="bottom_content" format="string" />
        <attr name="current_progress" format="float" />
        <attr name="max_progress" format="float" />
        <attr name="top_title_color" format="color" />
        <attr name="mid_progress_color" format="color" />
        <attr name="bottom_content_color" format="color" />
        <attr name="top_title_text_size" format="dimension" />
        <attr name="bottom_content_text_size" format="dimension" />
        <attr name="current_progress_text_size" format="dimension" />

        <!-- 设置显示圆环的弧度，360度则显示整个圆环 -->
        <attr name="sweep_angle" format="integer" />
        <attr name="start_arc" format="float" />
        <attr name="end_arc" format="float" />
    </declare-styleable>


    <!-- 进度百分比文字大小 -->
    <attr name="percent_text_size" format="dimension" />
    <!-- 圆形进度条边框大小 -->
    <attr name="stroke_width" format="dimension" />
    <!-- 矩形进度条 四周圆角大小 -->
    <attr name="rect_round" format="dimension" />
    <!-- 矩形进度条 是空心样式还是实心样式 -->
    <attr name="isHorizonStroke" format="boolean" />
    <!-- 进度百分比文字颜色 -->
    <attr name="percent_text_color" format="color|integer" />
    <!-- 进度条背景颜色 -->
    <attr name="progressBarBgColor" format="color|integer" />
    <!-- 扇形进度条颜色 -->
    <attr name="sectorColor" format="color|integer" />
    <!-- 扇形背景颜色 -->
    <attr name="unSweepColor" format="color|integer" />
    <!-- 进度颜色 -->
    <attr name="progressColor" format="color|integer" />
    <!-- 进度文字是否显示百分号 -->
    <attr name="showPercentSign" format="boolean" />
    <!-- 进度条样式圆形还是矩形 -->
    <attr name="orientation">
        <enum name="horizontal" value="0" />
        <enum name="circle" value="1" />
        <enum name="sector" value="2" />
    </attr>

    <declare-styleable name="cbprogressbar">
        <attr name="percent_text_size" />
        <attr name="isHorizonStroke" />
        <attr name="percent_text_color" />
        <attr name="progressBarBgColor" />
        <attr name="progressColor" />
        <attr name="sectorColor" />
        <attr name="unSweepColor" />
        <attr name="orientation" />
        <attr name="stroke_width" />
        <attr name="rect_round" />
        <attr name="showPercentSign" />
    </declare-styleable>

    <declare-styleable name="PathView">
        <attr name="pathColor" format="color|reference" />
        <attr name="pathWidth" format="dimension|reference" />
        <attr name="svg" format="reference" />
        <attr name="fill" format="boolean" />
        <attr name="fillColor" format="color|reference" />
        <attr name="naturalColors" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!--自动展开收起文字编辑框-->
    <declare-styleable name="ExpandTextView">
        <attr name="maxCollapsedLines" format="integer"/>
        <attr name="animDuration" format="integer"/>
        <attr name="animAlphaStart" format="float"/>
        <attr name="expandDrawable" format="reference"/>
        <attr name="collapseDrawable" format="reference"/>
        <attr name="arrowAlign" format="enum">
            <enum name="bottom" value="0"/>
            <enum name="top" value="1"/>
            <enum name="center" value="2"/>
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
        </attr>
        <attr name="arrowPosition" format="enum">
            <enum name="right" value="0"/>
            <enum name="below" value="1"/>
        </attr>
        <attr name="arrowPadding" format="dimension"/>
    </declare-styleable>


    <!--水滴listview-->
    <declare-styleable name="WaterDropView">
        <attr name="max_circle_radius" format="dimension"/>
        <attr name="min_circle_radius" format="dimension"/>
        <attr name="waterdrop_color" format="color"/>
        <attr name="topcircle_x" format="dimension"/>
        <attr name="topcircle_y" format="dimension"/>
        <attr name="bottomcircle_x" format="dimension"/>
        <attr name="bottomcircle_y" format="dimension"/>
    </declare-styleable>
    <!--PullSeparateListView-->
    <declare-styleable name="PullSeparateListView">
        <attr name="separate_all" format="boolean"/>
        <attr name="showDownAnim" format="boolean"/>
    </declare-styleable>

    <!--heardLayout心形泡泡-->
    <declare-styleable name="HeartLayout">
        <attr name="initX" format="dimension" />
        <attr name="initY" format="dimension" />
        <attr name="xRand" format="dimension" />
        <attr name="animLengthRand" format="dimension" />
        <attr name="xPointFactor" format="dimension" />
        <attr name="animLength" format="dimension" />
        <attr name="heart_width" format="dimension" />
        <attr name="heart_height" format="dimension" />
        <attr name="bezierFactor" format="integer" />
        <attr name="anim_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="NumberSwitchView">
        <attr name="ta_number_stroke_width" format="dimension" />
        <attr name="ta_number_bg_color" format="reference|color" />
        <attr name="ta_number_color" format="reference|color" />
        <attr name="ta_number_animation_duration" format="integer" />
    </declare-styleable>

    <!--快速集成viewpager滑动特效jazzView-->
    <declare-styleable name="JazzyViewPager">
        <attr name="style">
            <enum name="standard" value="0" />
            <enum name="tablet" value="1" />
            <enum name="cubein" value="2" />
            <enum name="cubeout" value="3" />
            <enum name="flipvertical" value="4" />
            <enum name="fliphorizontal" value="5" />
            <enum name="stack" value="6" />
            <enum name="zoomin" value="7" />
            <enum name="zoomout" value="8" />
            <enum name="rotateup" value="9" />
            <enum name="rotatedown" value="10" />
            <enum name="accordion" value="11" />
        </attr>
        <attr name="fadeEnabled" format="boolean" />
        <attr name="outlineEnabled" format="boolean" />
        <attr name="outlineColor" format="color|reference" />
    </declare-styleable>

    <!--饼状图-->
    <declare-styleable name="PieChartView">
        <attr name="circleRadius" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="exampleDrawable" format="color|reference" />
    </declare-styleable>

    <!--3D切换滑动-->
    <declare-styleable name="LoopRotarySwitchView">
        <attr name="orientations">
            <enum name="vertical" value="0"/>
            <enum name="horizontal" value="1"/>
        </attr>
        <attr name="autoRotation" format="boolean"/>
        <attr name="r" format="dimension"/>

        <attr name="direction">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>

    </declare-styleable>

    <!--rulerview-->
    <declare-styleable name="RulerView">
        <attr name="indicateColor" format="color|reference" />
        <attr name="selectedColor" format="color|reference" />
        <attr name="textColor" format="color|reference" />
        <attr name="textSizes" format="dimension|reference"/>
        <attr name="begin" format="integer|reference" />
        <attr name="end" format="integer|reference" />
        <attr name="indicateWidth" format="dimension|reference" />
        <attr name="indicatePadding" format="dimension|reference" />
    </declare-styleable>
    <!--AnimateCheckBox  选择框-->
    <declare-styleable name="AnimateCheckBox">
        <attr name="unCheckColor" format="color"/>
        <attr name="checkedColor" format="color"/>
        <attr name="lineColor" format="color"/>
        <attr name="lineWidth" format="dimension"/>
        <attr name="animDurations" format="integer"/>
    </declare-styleable>

    <!--自定义仪表盘进度条,使用这样的定义，可在xml里面定义属性-->
    <declare-styleable name="SeekCircle">
        <attr name="min" format="integer" value="0" />
        <attr name="max" format="integer" value="100" />
        <attr name="progress" format="integer" value="0" />
        <attr name="startColor" format="color" />
        <attr name="endColor" format="color" />
        <attr name="inactiveColor" format="color" />
        <attr name="ringBias" format="float" />
        <attr name="sectionRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="PopVerticalSeekbarView">
        <attr name="pop_button_drawable" format="reference"/>
        <attr name="pop_push_drawable" format="reference"/>
        <attr name="pop_line_width" format="float"/><!--宽度-->
        <attr name="pop_bg_color" format="color"/><!--背景颜色-->
        <attr name="pop_bar_color" format="color"/><!--bar颜色-->
        <attr name="pop_text_color" format="color"/><!--文字颜色-->
        <attr name="pop_text_size" format="float"/><!--文字大小-->
        <attr name="pop_bar_min" format="integer"/><!--最小值-->
        <attr name="pop_bar_max" format="integer"/><!--最大值-->
        <attr name="pop_bar_current" format="integer"/><!--当前值-->
    </declare-styleable>

    <!--双向seekbar-->
    <declare-styleable name="MaterialRangeSlider">
        <attr name="RangeLineMin" format="integer" />
        <attr name="RangeLineMax" format="integer" />
        <attr name="unpressedTargetRadius" format="dimension" />
        <attr name="pressedTargetRadius" format="dimension" />
        <attr name="targetColor" format="color" />
        <attr name="insideRangeLineColor" format="color" />
        <attr name="outsideRangeLineColor" format="color" />
        <attr name="insideRangeLineStrokeWidth" format="dimension" />
        <attr name="outsideRangeLineStrokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AdvTextSwitcher">
        <attr name="advTextSize" format="dimension" />
        <attr name="advTextColor" format="color"/>
        <attr name="advGravity">
            <flag name="right" value="0x01" />
            <flag name="left" value="0x02" />
            <flag name="center" value="0x03" />
        </attr>
    </declare-styleable>

    <declare-styleable name="OutlineTextView">
        <attr name="ot_innerShadowColor" format="color"/>
        <attr name="ot_innerShadowRadius" format="dimension"/>
        <attr name="ot_innerShadowDx" format="dimension"/>
        <attr name="ot_innerShadowDy" format="dimension"/>

        <attr name="ot_outerShadowColor" format="color"/>
        <attr name="ot_outerShadowRadius" format="dimension"/>
        <attr name="ot_outerShadowDx" format="dimension"/>
        <attr name="ot_outerShadowDy" format="dimension"/>

        <attr name="ot_typeface" format="string" />

        <attr name="ot_foreground" format="reference|color"/>
        <attr name="ot_background" format="reference|color"/>

        <attr name="ot_strokeWidth" format="dimension" />
        <attr name="ot_strokeMiter" format="dimension" />
        <attr name="ot_strokeColor" format="color" />
        <attr name="ot_strokeJoinStyle">
            <enum name="miter" value="0" />
            <enum name="bevel" value="1" />
            <enum name="round" value="2" />
        </attr>
    </declare-styleable>
</resources>