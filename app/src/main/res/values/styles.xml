<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <!--activity_main中的linearlayout的样式-->
    <style name="baseLinearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--activity_main里面button的样式和权重-->
    <style name="baseRes">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CustomDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 自定义toast -->
    <style name="myToastScale">
        <item name="android:windowEnterAnimation">@anim/toast_enter</item>
        <item name="android:windowExitAnimation">@anim/toast_out</item>
    </style>

    <style name="myToastUpDown">
        <item name="android:windowEnterAnimation">@anim/toast_downenter</item>
        <item name="android:windowExitAnimation">@anim/toast_downout</item>
    </style>

    <style name="myToastLeftRight">
        <item name="android:windowEnterAnimation">@anim/toast_leftin</item>
        <item name="android:windowExitAnimation">@anim/toast_rightout</item>
    </style>
    <!-- 自定义对话框 -->
    <style name="mycustomdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--seekbar-->
    <style name="CustomFloaterTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:shadowColor">#FFFF0000</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">3</item>
    </style>

    <!--materilaIcon-->
    <style name="materialStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    
    <!--底部弹出的对话框-->
    <style name="bottomStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_exit</item>
    </style>

    <style name="my_bottomDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--radialbuttonlayout-->
    <style name="radialButtonLayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:minHeight">75dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_circle_radialbutton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
<!--=====================================================================================================-->
    <!--photopicker-->
    <!-- 设置ActionBar菜单字体 -->
    <style name="ActionMenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/action_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="actionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="actionBarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="PhotoPickerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/photopicker_background</item>
        <item name="actionMenuTextAppearance">@style/ActionMenuTextStyle</item>
        <!--<item name="actionBarTheme">@style/actionBarTheme</item>-->
        <!--<item name="actionBarPopupTheme">@style/actionBarPopupTheme</item>-->
    </style>
 <!--=====================================================================================================-->
</resources>
